# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================

# Opción 1: SQLite (Desarrollo/Local)
DATABASE_URL=sqlite:///oapce_multitrans.db

# Opción 2: PostgreSQL (Producción recomendada)
# DATABASE_URL=postgresql://usuario:password@host:5432/nombre_db

# Opción 3: MySQL/MariaDB
# DATABASE_URL=mysql://usuario:password@host:3306/nombre_db

# Opción 4: SQL Server
# DATABASE_URL=mssql+pyodbc://usuario:password@host/nombre_db?driver=ODBC+Driver+17+for+SQL+Server

# ========================================
# CONFIGURACIÓN DE SINCRONIZACIÓN DE DATOS
# ========================================

# Sincronización automática (true/false)
AUTO_SYNC=false

# Intervalo de sincronización en minutos (ej: 60 = cada hora)
SYNC_INTERVAL_MINUTES=60

# Ruta a archivos Excel/CSV para importación
EXCEL_DATA_PATH=./data

# API externa para sincronización
API_URL=https://api.tuempresa.com/v1
API_KEY=tu_api_key_aqui

# Sincronización completa vs incremental
FULL_SYNC=false

# ========================================
# CONFIGURACIÓN ESPECÍFICA PARA ONVIO
# ========================================

# API Key de Onvio (obtén en tu panel de Onvio)
ONVIO_API_KEY=tu_api_key_de_onvio

# Ambiente de Onvio (production/sandbox)
ONVIO_ENVIRONMENT=production

# Sincronización automática con Onvio
ONVIO_AUTO_SYNC=false

# Intervalo de sincronización con Onvio (minutos)
ONVIO_SYNC_INTERVAL=15

# Exportar datos de Onvio a Excel como respaldo
ONVIO_EXPORT_TO_EXCEL=true
ONVIO_EXPORT_PATH=./data/onvio_export

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================

LOG_LEVEL=INFO
LOG_FILE=data_sync.log

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================

# Crear backups automáticos (true/false)
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
